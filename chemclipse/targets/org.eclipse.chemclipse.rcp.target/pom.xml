<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.eclipse.chemclipse</groupId>
    <artifactId>org.eclipse.chemclipse.targets.parent</artifactId>
    <version>BUILD-VERSION</version>
  </parent>

  <artifactId>org.eclipse.chemclipse.rcp.target</artifactId>
  <packaging>pom</packaging>
  <version>4.5.1-SNAPSHOT</version>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <!--
                    File and classifier must have the same name.
                  -->
                  <file>chemclipse-4.5.1.target</file>
                  <type>target</type>
                  <classifier>chemclipse</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  
</project>
